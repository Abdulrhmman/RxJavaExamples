<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FF4141"
    android:id="@+id/relative_layout">

    <RelativeLayout
        android:id="@+id/prepare_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a number of seconds."
            android:layout_above="@id/number_picker"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="16sp"/>

        <NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:solidColor="#fff"
            android:background="#fff" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:layout_margin="15dp"
            android:layout_below="@id/number_picker"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:textColor="#FF4141"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/play_again_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_play_again"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_play_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Play Again"
            android:background="#fff"
            android:textColor="#FF4141"
            android:layout_margin="15dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/click_now_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Click Now!!"
        android:textSize="64sp"
        android:textColor="#fff"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="90sp"
        android:textColor="#fff"/>

</RelativeLayout>